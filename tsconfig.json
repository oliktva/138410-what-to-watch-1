{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "./public/",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "noUnusedParameters": true,
    "strict": true,
    "noImplicitThis": false,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "types": [
      "jest",
      "node"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "public",
    "**/fixtures",
    "**/*.test.ts"
  ]
}
